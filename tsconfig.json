{
  "compilerOptions": {
    "target": "ESNext",

    "useDefineForClassFields": true,
    "module": "CommonJS",
    "lib": ["ES2021", "DOM", "DOM.Iterable"],
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "isolatedModules": true,
    "outDir": "dist",
    "declaration": true,

    /* Linting */
    "strict": true,
    "noUnusedLocals": true,
    "noUnusedParameters": true,
    "noFallthroughCasesInSwitch": true,
    "esModuleInterop": true,

    "types": ["jest"]
    // "baseUrl": ".",
    // "paths": {
    //   "@lib/*": ["src/lib/*"]
    // }
  },
  "include": ["src"],
  "exclude": ["src/main.ts"]
}
